    //引数の座標(画像上の座標)がブラウザの中心に来るように移動
    function choose_region(x_image_pos,y_image_pos,scale){
        photo_scale_reset();

        var window_w = window.innerWidth; //ブラウザの幅
        var window_h = window.innerHeight; //ブラウザの高さ
        var natural_w = parseFloat(document.getElementById('input-image').naturalWidth); //元画像の幅
        var natural_h = parseFloat(document.getElementById('input-image').naturalHeight); //元画像の高さ
        var current_top = parseFloat(window.getComputedStyle(document.getElementById("input-image"), null).getPropertyValue('top'))
        var current_left = parseFloat(window.getComputedStyle(document.getElementById("input-image"), null).getPropertyValue('left'))
        var current_w = parseFloat(window.getComputedStyle(document.getElementById("input-image"), null).getPropertyValue('width'))
        var current_h = parseFloat(window.getComputedStyle(document.getElementById("input-image"), null).getPropertyValue('height'))
        var move_x = window_w/2 - (current_w / natural_w * x_image_pos + (window_w-current_w)/2)
        var move_y = window_h/2 - (current_h / natural_h * y_image_pos + (window_h-current_h)/2)
        $(".input-image").css({
            left: current_left + move_x + 'px',
            top: current_top + move_y + 'px',
        });

        photo_scale_change(scale)
        current_top = parseFloat(window.getComputedStyle(document.getElementById("input-image"), null).getPropertyValue('top'))
        current_left = parseFloat(window.getComputedStyle(document.getElementById("input-image"), null).getPropertyValue('left'))
        current_w = parseFloat(window.getComputedStyle(document.getElementById("input-image"), null).getPropertyValue('width'))
        current_h = parseFloat(window.getComputedStyle(document.getElementById("input-image"), null).getPropertyValue('height'))
        var top_pos  = window.getComputedStyle(document.getElementById("input-image"), null).getPropertyValue('top');
        var left_pos  = window.getComputedStyle(document.getElementById("input-image"), null).getPropertyValue('left');
        var img_h  = window.getComputedStyle(document.getElementById("input-image"), null).getPropertyValue('height');
        var img_w  = window.getComputedStyle(document.getElementById("input-image"), null).getPropertyValue('width');
        var img_top_abs = parseFloat(top_pos) - (parseFloat(img_h) / 2);
        var img_left_abs = parseFloat(left_pos) - (parseFloat(img_w) / 2);
        // 画像上のマウス位置
        var img_mouse_x = window_w/2 - img_left_abs //現在のブラウザの中心に存在する画像上のピクセル
        var img_mouse_y = window_h/2 - img_top_abs //現在のブラウザの中心に存在する画像上のピクセル
        img_mouse_x = (natural_w / current_w) * img_mouse_x //元画像上のマウス位置
        img_mouse_y = (natural_h / current_h) * img_mouse_y //元画像上のマウス位置
        var differ_x = img_mouse_x - x_image_pos
        var differ_y = img_mouse_y - y_image_pos
        move_x = current_w / natural_w * differ_x
        move_y = current_h / natural_h * differ_y
        $(".input-image").css({
            left: current_left + move_x + 'px',
            top: current_top + move_y + 'px',
        });
    };
