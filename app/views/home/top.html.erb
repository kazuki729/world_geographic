    }
    //非同期でDBに登録
    function UpdateDB(correct_country,game_num){
        console.log("AJAXをキック（処理開始）") //debug
        $.ajax({
            type:'GET', // リクエストのタイプはGETです
            url: '/UpdateDB', // URLは"/meals"を指定します
            data: {correct_country: correct_country, game: game_num}, // コントローラへフォームの値を送信します
            dataType: 'json' // データの型はjsonで指定します
        })
        .done(function(data){
        // 通信に成功した場合の処理です
            console.log("非同期通信完了！") //debug
            elem = document.getElementById('input-image_base')
            elem.src='/image/'+ unique_num + "/" + game_number //DBからバイナリ画像取得
            unique_num = unique_num + 1
        })
        .fail(function(){
            // 通信に失敗した場合の処理です
            console.log('非同期通信失敗！') //debug
            alert('非同期通信失敗！')
        })
    }

}catch(e){
        var errMsg = "";
        if (e.fileName && e.lineNumber) {
            // ファイル名と行番号が取得できたらメッセージとしてログに出力する
            errMsg = "ファイル名：" + e.fileName + "、 行番号：" + e.lineNumber;
        } else {
            errMsg = e.message;
        }
        alert(errMsg)
        console.error("エラー：", errMsg);
}
</script>