            var t = arr[--a];
            arr[a] = arr[j];
            arr[j] = t;
        }
        temp.push(arr[0])
        temp.push(arr[1])
        temp.push(arr[2])
        temp.push(answer_index) //答えを追加
        a = temp.length;
        while (a) { //答えを入れた4つをシャッフル
