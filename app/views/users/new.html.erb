<div class="signup-inner">
    <div class="container">
        <div class="row">
            <div class="col-md-6 mt-5">
                <!-- ここに説明書き -->
                <h1 class="text-white font-weight-bold">世界地図を</h1>
                <h1 class="text-white font-weight-bold">マスターしよう！！</h1>
                <h3 class="text-white">国の場所、首都を覚えて腕試しができる！</h3>
            </div>
            <div class="col-md-4 offset-md-1 text-white font-weight-bold mt-4">
                <% provide(:title, 'Sign up') %>
                <h1 style="text-align:center;">Sign up</h1>
                <%= form_for(@user, url: signup_path) do |f| %>
                    <%= render 'shared/error_messages' %>

                    <%= f.label :name %>
                    <%= f.text_field :name, class: 'form-control' %>

                    <%= f.label :email %>
                    <%= f.email_field :email, class: 'form-control' %>

                    <%= f.label :password %>
                    <%= f.password_field :password, class: 'form-control' %>

                    <%= f.label :password_confirmation, "Confirmation" %>
                    <%= f.password_field :password_confirmation, class: 'form-control mb-3 input-form' %>

                    <%= f.submit "Create my account", class: "btn btn-primary input-form font-weight-bold" %>
                    <%= link_to "（Login画面）", login_path, class: 'text-white float-right font-lg' %>
                <% end %>
            </div>
        </div>
    </div>
</div>